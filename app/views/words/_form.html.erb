<%= form_with(model: word, local: true) do |f| %>
  <%= render 'shared/error_messages', model: word %>
  <%= f.text_field :english, placeholder: "英語", class: "input-box" %>
  <%= f.text_field :japanese, placeholder: "日本語", class: "input-box"%>
  <%= f.text_area :remarks, placeholder: "備考", rows: "7", class: "input-box" %>
  <%= f.submit "Register" %>
<% end %>